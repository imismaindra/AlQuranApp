<?xml version="1.0" encoding="utf-8"?>
<!-- item_surah.xml (fixed version) -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:padding="16dp">

        <!-- Nomor Surah -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardNumber"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/primary_green_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/text_white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="1" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Container untuk nama & info -->
        <LinearLayout
            android:id="@+id/llInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/cardNumber"
            app:layout_constraintTop_toTopOf="@id/cardNumber"
            app:layout_constraintBottom_toBottomOf="@id/cardNumber"
            app:layout_constraintEnd_toStartOf="@id/tvArabicName">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                tools:text="Al-Fatihah" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvRevelation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/ic_location"
                    android:drawableTint="@color/primary_green"
                    tools:text="Makkah" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/tvAyahs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/ic_book"
                    android:drawableTint="@color/primary_green"
                    tools:text="7 Ayat" />
            </LinearLayout>
        </LinearLayout>

        <!-- Nama Arab -->
        <TextView
            android:id="@+id/tvArabicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/arabic_text"
            android:fontFamily="serif"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardNumber"
            app:layout_constraintBottom_toBottomOf="@id/cardNumber"
            app:layout_constraintVertical_bias="0.5"
            tools:text="الفاتحة" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
