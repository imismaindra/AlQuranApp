<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlQuranApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/poppins</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_gold</item>
        <item name="colorSecondaryVariant">@color/accent_gold_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="backgroundColor">@color/background_light</item>

        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- Theme tanpa ActionBar -->
    <style name="Theme.AlQuranApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- App Bar Overlay -->
    <style name="Theme.AlQuranApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Popup Overlay -->
    <style name="Theme.AlQuranApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>